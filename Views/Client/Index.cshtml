@model IEnumerable<vproker.Models.Client>
@{
    ViewBag.Title = "Клиенты";
}
@section Scripts {
    <script src="~/ts/utils.js"></script>
}
<p>
    <a asp-action="Create">Новый Клиент</a>
</p>

<div class="container">
    <div id="toolbar">
    </div>

    <table id="table" class="table table-striped table-responsive"
           data-toggle="table"
           data-url="/api/client"
           data-toolbar="#toolbar"
           data-sort-name="client.name"
           data-sort-order="asc"
           data-pagination="true"
           data-search="true"
           data-locale="ru-RU"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-page-size="50">
        <thead>
            <tr>
                <th data-field="client.createdAt" data-sortable="true" data-formatter="vproker.Utils.dateFormatter">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th data-field="client.name" data-sortable="true">@Html.DisplayNameFor(model => model.Name)</th>
                <th data-field="client.phoneNumber" data-sortable="true">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th data-field="allOrdersNumber" data-sortable="true">Всего заказов</th>
                <th data-field="activeOrdersNumber" data-sortable="true">Активных заказов</th>
                <th data-field="client.id" data-width="50" data-align="center" data-halign="center" data-formatter="vproker.Utils.getClientActions">Действия</th>
            </tr>
        </thead>
    </table>
</div>


